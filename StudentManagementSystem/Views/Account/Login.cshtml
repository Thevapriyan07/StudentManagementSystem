@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh; background: #f0f2f5;">
    <div class="card shadow-lg p-5 rounded" style="max-width: 450px; width: 100%; background: #ffffff;">
        <h2 class="text-center mb-4" style="color: #0d6efd;">@ViewBag.Title</h2>
        <form method="post">
            <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label" style="font-weight: bold; color: #495057;"></label>
                <input asp-for="Email" class="form-control" style="border-radius: 8px; border: 1px solid #ced4da;" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label" style="font-weight: bold; color: #495057;"></label>
                <input asp-for="Password" class="form-control" style="border-radius: 8px; border: 1px solid #ced4da;" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" id="RememberMe" />
                    <label for="RememberMe" class="form-check-label" style="color: #495057;">
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100" style="padding: 12px; border-radius: 8px;">Login</button>

        </form>
    </div>
</div>

<!-- Include Bootstrap JS -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
