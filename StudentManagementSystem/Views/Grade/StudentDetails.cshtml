@model StudentDetailsViewModel

<div class="container my-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Student Details</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>First Name:</strong> @Model.FirstName</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Last Name:</strong> @Model.LastName</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Email:</strong> @Model.Email</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Gender:</strong> @Model.Gender</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Address:</strong> @Model.Address</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Grade:</strong> @Model.GradeName</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mt-4">
        <div class="card-header bg-secondary text-white">
            <h3 class="mb-0">Marks</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Subject</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Marks.Any())
                    {
                        @foreach (var mark in Model.Marks)
                        {
                            <tr>
                                <td>@mark.SubjectName</td>
                                <td>@mark.Score</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center">No marks available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
